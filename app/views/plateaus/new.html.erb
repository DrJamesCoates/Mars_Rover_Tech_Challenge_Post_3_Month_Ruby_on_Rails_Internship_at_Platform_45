<% provide(:title, "New Plateau") %>

<h1>New Plateau</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <p><i>Decide on the plateau name, and establish the coordinates for the top right corner of the plateau</i></p>

    <%= form_with(url: plateaus_url, local: true) do |form| %>
    
      <%= form.hidden_field :explored, value: false %>

      <%= form.label :name %>
      <%= 
        form.text_field :name, 
        class: "form-control" 
      %>

      <%= form.label :top_right_x_coordinate %>
      <%= 
        form.text_field :top_right_x_coordinate, 
        class: "form-control" 
      %>

      <%= form.label :top_right_y_coordinate %>
      <%= 
        form.text_field :top_right_y_coordinate, 
        class: "form-control" 
      %>

      <%= form.submit "Create Plateau", class: "btn btn-primary" %>

    <% end %>
  
  </div>
</div>