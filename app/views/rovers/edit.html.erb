<% provide(:title, "Edit Rover") %>

<h1>Edit rover</h1>


<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <p><i>Edit the rover name</i></p>

    <%= form_with(url: plateau_rover_url, method: :patch, local: true) do |form| %>

      <%= form.label :name %>
      <%= form.text_field :name, placeholder: @rover.name, value: @rover.name, class: "form-control" %>

      <%= form.submit "Update Rover", class: "btn btn-primary", id: "form_button" %>

    <% end %>
  
  </div>
</div>